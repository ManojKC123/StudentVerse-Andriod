<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.studentverse">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/clogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/clogo"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudentVerse"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.ui.ChapterActivity"
            android:exported="true" />
        <activity
            android:name=".activity.ui.TopicActivity"
            android:exported="true"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.ui.UpdateProfileActivity"
            android:exported="true"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.ui.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ui.SinglePostActivity"
            android:noHistory="true" />
        <activity
            android:name=".activity.ui.AskQuestionActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.ui.DashboardActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.ui.LoginActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".activity.ui.SignupActivity"
            android:launchMode="singleTask" />
    </application>

</manifest>